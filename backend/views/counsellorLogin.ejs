<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Counsellor Login</title>
  <style>
    body { background:#f7f8fa; font-family: 'Segoe UI', Arial, sans-serif }
    .container { max-width:420px; margin:48px auto; background:#fff;padding:22px;border-radius:10px;box-shadow:0 4px 20px rgba(0,0,0,0.05) }
    input{width:100%;padding:10px;border:1px solid #e5e7eb;border-radius:6px;margin-bottom:12px}
    button{background:#1d4ed8;color:white;padding:10px;border-radius:6px;border:none;cursor:pointer}
  </style>
</head>
<body>
  <div class="container">
    <h2 style="margin-top:0">Counsellor Login</h2>
    <form id="counsellorLogin">
      <label>Username</label>
      <input name="username" required />

      <label>Password</label>
      <input name="password" type="password" required />

      <div style="display:flex; justify-content:flex-end; margin-top:8px;">
        <button type="submit">Log in</button>
      </div>
    </form>
    <p style="margin-top:12px;color:#6b7280;">Don't have an account? <a href="/api/counsellor/signup">Sign up</a></p>
  </div>

  <script>
    document.getElementById('counsellorLogin').addEventListener('submit', async function(e){
      e.preventDefault();
      const form = new FormData(e.target);
      const body = Object.fromEntries(form.entries());
      try{
        const res = await fetch('/api/counsellor/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body)
        });
        const data = await res.json();
        if (res.ok && data.token) {
          // Redirect to frontend counsellor dashboard and pass token in fragment so
          // the frontend can store it in localStorage under its origin.
          const frontendOrigin = '<%= frontendOrigin %>';
          const token = encodeURIComponent(data.token);
          // Use fragment (hash) so token is not sent to server on redirect.
          window.location.href = `${frontendOrigin}/counsellor#token=${token}`;
        } else {
          alert(data.message || 'Login failed');
        }
      } catch (err) {
        console.error(err);
        alert('An error occurred');
      }
    });
  </script>
</body>
</html>